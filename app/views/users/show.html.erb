<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
  <h1><%= current_user.email %></h1>
<% else %>
<h1><%= @user.email %></h1>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Evidence</th>
      <th>Standard</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.elements.each do |element| %>
      <tr>
        <td><%= element.title %></td>
        <td><%= element.evidence %></td>
        <td><%= element.standard %></td>
        <td><%= element.description %></td>
        <td><%= element.user_id %></td>
        <td><%= link_to 'Show', element %></td>
        <% if element.user == current_user %>
          <td><%= link_to 'Edit', edit_element_path(element) %></td>
          <td><%= link_to 'Destroy', element, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    
  </tbody>
</table>

<br>

<%= link_to 'New Element', new_element_path %>