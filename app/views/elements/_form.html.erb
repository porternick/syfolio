<%= form_for @element, :html => { :multipart => true } do |f| %>
  <% if @element.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@element.errors.count, "error") %> prohibited this element from being saved:</h2>

      <ul>
      <% @element.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-7">
      <p><%= image_tag(@element.evidence.url(:large), :class => "img-responsive-center")%></p>
    </div>
    <div class="col-md-5">
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, :placeholder => "What was the title of the project or assignment?" %>
      </div>
      <div class="field">
        <%= f.label :evidence %><br>
        <%= f.file_field :evidence %>
      </div>
      <div class="field">
        <%= f.label :standard %><br>
        <%= f.select(:standard, Element.standards) %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description, :placeholder => "Use 200 words or less to explain how this project demonstrates masery of the standard." %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>

<% end %>
